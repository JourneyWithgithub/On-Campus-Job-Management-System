<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#46009688">

        <ImageView
            android:id="@+id/navigation_drawer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_drawer"
            android:padding="10dp"

            android:background="@drawable/job_post_button"
            android:layout_gravity="end|top"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Title..."
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:padding="10dp"
            android:textColor="@color/white"
            android:id="@+id/job_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="29 July 2023"
            android:textAppearance="?android:textAppearanceSmall"
            android:padding="10dp"
            android:textColor="#3FDDDD"
            android:id="@+id/job_date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAppearance="?android:textAppearanceMedium"
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/job_description"
            android:maxLines="4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:padding="10dp"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:id="@+id/job_skills" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:padding="10dp"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:id="@+id/job_salary" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:padding="10dp"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:id="@+id/job_deadline" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <!-- Edit Icon - Positioned in the bottom left corner -->
            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_post"
                android:padding="10dp"
                android:background="#D56B8F"

                android:layout_gravity="bottom|start" />

            <!-- Delete Icon - Positioned in the bottom right corner -->
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:padding="10dp"
                android:background="#D64D7C"
                android:layout_gravity="bottom|end"
              />

        </FrameLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
