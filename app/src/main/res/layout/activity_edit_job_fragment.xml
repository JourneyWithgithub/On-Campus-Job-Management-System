<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EditJobFragment">

    <EditText
        android:id="@+id/et_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Title"/>

    <EditText
        android:id="@+id/et_job_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Description"/>

    <EditText
        android:id="@+id/et_job_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Skills"/>

    <EditText
        android:id="@+id/et_job_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Salary"/>

    <EditText
        android:id="@+id/et_job_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Deadline"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>